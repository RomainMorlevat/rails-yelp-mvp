<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1>Restaurants</h1>
        <ul>
          <% @restaurants.each do |resto| %>
            <li><%= link_to resto.name, restaurant_path(resto.id) %></li>
          <% end %>
        </ul>

        <%= link_to "Create a restaurant", new_restaurant_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
