<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :rating, collection: (0..5) %>
          <%= f.input :content %>

          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
